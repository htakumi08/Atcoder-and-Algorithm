    "# B\n",
    "M = int(input())\n",
    "D = list(map(int, input().split()))\n",
    "\n",
    "ans = (sum(D)+1) // 2\n",
    "i = 0\n",
    "while ans - D[i] > 0:\n",
    "    ans -= D[i]\n",
    "    i += 1\n",
    "    \n",
    "print(i+1, ans)\n"
